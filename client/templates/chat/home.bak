<template name="chatHome">
    <main>
        {{#if Template.subscriptionsReady}}
            <div class="container chat-home">
                <div class="row">
                    <div class="sidebar col s3">
                        {{> chatSidebarAvailableUsers}}
                        {{> chatSidebarUserInfo}}
                        {{> chatSidebarSettings}}
                        {{> chatSidebarFooter}}
                    </div>
                    <div class="col s9 chat-container">
                        {{> chatMainPanelWindow}}
                    </div>
                </div>
            </div>
        {{else}}
            {{>loading}}
        {{/if}}
    </main>
</template>